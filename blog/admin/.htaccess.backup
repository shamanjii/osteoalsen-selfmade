
# Admin-spezifische .htaccess
# Diese Datei sollte in /blog/admin/.htaccess gespeichert werden

# CSP für Admin-Bereich lockern
<IfModule mod_headers.c>
    Header always unset Content-Security-Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'"
</IfModule>

# Admin-Bereich schützen (optional)
# AuthType Basic
# AuthName "Blog Admin"
# AuthUserFile /pfad/zu/.htpasswd
# Require valid-user